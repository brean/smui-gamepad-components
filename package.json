{
	"name": "smui-gamepad-components",
	"author": "Andreas Bresser <self@andreasbresser.de>",
	"license": "BSD-3-Clause",
	"version": "0.1.3",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"package": "npm run prepack",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"smui": "npm run smui-theme-light && npm run smui-theme-dark",
		"smui-theme-light": "smui-theme compile static/smui.css -i src/theme",
		"smui-theme-dark": "smui-theme compile static/smui-dark.css -i src/theme/dark"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"overrides": {
		"cookie": "^1.0.2"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.32.0",
		"@material/typography": "^14.0.0",
		"@smui/button": "^8.0.1",
		"@smui/dialog": "^8.0.1",
		"@smui/drawer": "^8.0.1",
		"@smui/fab": "^8.0.1",
		"@smui/form-field": "^8.0.1",
		"@smui/icon-button": "^8.0.1",
		"@smui/list": "^8.0.1",
		"@smui/paper": "^8.0.1",
		"@smui/slider": "^8.0.1",
		"@smui/snackbar": "^8.0.1",
		"@smui/tab": "^8.0.1",
		"@smui/tab-bar": "^8.0.1",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.27.0",
		"@sveltejs/package": "^2.4.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"eslint": "^9.18.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.15.0",
		"publint": "^0.3.12",
		"smui-theme": "^8.0.1",
		"svelte": "^5.37.3",
		"svelte-check": "^4.3.1",
		"svelte-gamepad-virtual-joystick": "^1.0.10",
		"svelte-sequential-preprocessor": "^2.0.2",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.3"
	}
}
